{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<main>
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">retour à la liste</a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">éditer</a>

    {{ include('admin/user/_delete_form.html.twig') }}
</main>
{% endblock %}
