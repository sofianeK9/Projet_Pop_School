{% extends 'base.html.twig' %}

{% block title %}Administrateur index{% endblock %}

{% block body %}
    <h1>Administrateur index</h1>

    <div class="button-container">
        <a class="btn-action" href="{{ path('app_admin_administrateur_new') }}">Créer</a></button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for administrateur in administrateurs %}
                <tr>
                    <td>{{ administrateur.id }}</td>
                    <td>{{ administrateur.nom }}</td>
                    <td>{{ administrateur.prenom }}</td>
                    <td>
                        <div class="button-container"> 
                            <a class="btn-action" href="{{ path('app_admin_administrateur_show', {'id': administrateur.id}) }}">Voir</a>
                            <a class="btn-action" href="{{ path('app_admin_administrateur_edit', {'id': administrateur.id}) }}">Éditer</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun enregistrement trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
