{% extends 'base.html.twig' %} {% block title %}Inscription{% endblock %} {%
block body %}
{{ form_start(registrationForm, {'attr': {'class': 'content-form'}}) }}
<section class="container">
  <div class="row">
    <div class="col">
      <h1>Inscription</h1>
      {{ form_errors(registrationForm) }}
      <fieldset>
        <legend>Mon inscription</legend>
        {{
          form_row(registrationForm.email, {
            label: "Email : "
          })
        }}
        {{
          form_row(registrationForm.plainPassword, {
            label: "Mot de passe : "
          })
        }}
        {{
          form_row(registrationForm.confirmedPassword, {
            label: "Confirmez votre mot de passe : "
          })
        }}
        {{ form_row(registrationForm._token) }}
        {{ form_row(registrationForm.captcha) }}
        {{ form_errors(registrationForm.captcha) }}
        <button type="submit" class="btn-action">s'inscrire</button>
      </fieldset>
    </div>
  </div>
</section>
{{ form_end(registrationForm) }}
{% endblock %}
