{% extends 'base.html.twig' %}

{% block title %}Edition profil{% endblock %}

{% block body %}
    <h1>Edition profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_profile_index') }}">retour à la liste</a>

    
    <a href="{{ path('app_profile_edit', {'id': user.id}) }}">éditer</a>

    {%if is_granted('ROLE_ADMIN')%}
    {{ include('profile/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
