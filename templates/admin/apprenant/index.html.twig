{% extends 'base.html.twig' %}

{% block title %}Apprenant index{% endblock %}

{% block body %}
    <h1>Apprenant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Genre</th>
                <th>DateNaissance</th>
                <th>Telephone</th>
                <th>Consentement</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for apprenant in apprenants %}
            <tr>
                <td>{{ apprenant.id }}</td>
                <td>{{ apprenant.nom }}</td>
                <td>{{ apprenant.prenom }}</td>
                <td>{{ apprenant.genre }}</td>
                <td>{{ apprenant.dateNaissance ? apprenant.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ apprenant.telephone }}</td>
                <td>{{ apprenant.consentement ? 'Yes' : 'No' }}</td>
                <td>{{ apprenant.createdAt ? apprenant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ apprenant.updatedAt ? apprenant.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ apprenant.deletedAt ? apprenant.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_apprenant_show', {'id': apprenant.id}) }}">show</a>
                    <a href="{{ path('app_admin_apprenant_edit', {'id': apprenant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_apprenant_new') }}">Create new</a>
{% endblock %}
